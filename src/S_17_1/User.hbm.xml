<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!--idea中配置hibernate-->
    <!--https://www.jianshu.com/p/50e0a7a28b53-->
    <class name="S_17_1.User" table="user" >
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="native"/>
        </id>
        <property name="name" type="string" not-null="true" length="50" >
            <column name="name"/>
        </property>
        <set name="roles" table="mapping" cascade="all">
            <key column="userid"/>
            <many-to-many class="S_17_1.Role" column="roleid" />
        </set>

    </class>
</hibernate-mapping>